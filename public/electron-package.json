
{
  "name": "surakshit-locker-desktop",
  "productName": "Surakshit Locker",
  "version": "1.0.0",
  "description": "Desktop application for Surakshit Locker document management",
  "main": "electron.js",
  "author": "Surakshit Technologies",
  "license": "Proprietary",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.surakshit.locker",
    "productName": "Surakshit Locker",
    "files": [
      "build/**/*",
      "electron.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "build/apple-touch-icon.png"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/logo512.png"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE.txt"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.9.1"
  }
}
